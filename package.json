{
  "name": "igloo",
  "version": "0.0.7",
  "description": "Frostr desktop signer and key management app",
  "author": {
    "name": "austinkelsay",
    "email": "austinkelsay@protonmail.com"
  },
  "main": "dist/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development npm run build && electron .",
    "build": "tsc && webpack --config webpack.config.js",
    "watch": "tsc -w",
    "dev": "cross-env NODE_ENV=development concurrently \"webpack --config webpack.config.js --watch\" \"electron .\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "pack": "cross-env NODE_ENV=production npm run build && electron-builder --dir",
    "dist": "cross-env NODE_ENV=production npm run build && electron-builder",
    "dist:win": "cross-env NODE_ENV=production npm run build && electron-builder --win --publish never",
    "dist:mac": "cross-env NODE_ENV=production npm run build && electron-builder --mac --publish never",
    "dist:linux": "cross-env NODE_ENV=production npm run build && electron-builder --linux --publish never",
    "release": "cross-env NODE_ENV=production npm run build && electron-builder --publish always",
    "export-key": "./scripts/export-gpg-key.sh",
    "sign-release": "./scripts/sign-release.sh",
    "create-release": "./scripts/create-release.sh"
  },
  "build": {
    "appId": "com.igloo.app",
    "productName": "Igloo",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "index.html",
      "globals.css",
      "src/assets/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/assets/frostr-logo-transparent.png",
      "identity": null,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/frostr-logo-transparent.png",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/frostr-logo-transparent.png",
      "artifactName": "${name}-${version}.${ext}",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/prop-types": "^15.7.13",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/ws": "^8.5.14",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^33.0.2",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "postcss": "^8.4.47",
    "postcss-loader": "^8.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.5.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "@cmdcode/buff": "^2.2.5",
    "@frostr/bifrost": "^0.2.5",
    "@noble/ciphers": "^1.2.1",
    "@noble/curves": "^1.8.1",
    "@noble/hashes": "^1.7.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@types/express": "^5.0.0",
    "audit": "^0.0.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "express": "^4.21.1",
    "lucide-react": "^0.453.0",
    "nostr-tools": "^2.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "underscore.string": "^3.3.6",
    "ws": "^8.18.0",
    "zod": "^3.24.2"
  }
}
